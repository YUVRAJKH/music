  <style>
    
     body, html {
      height: 100%;
      margin: 0;
      padding: 0 ;
    }

    .ccccc {
      background-image:url("/images/2680274.jpg");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      height:150%;
      
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
      font-size: 36px;
      color: #ffffff;
      text-shadow: 0 0 10px rgba(255,255,255,0.2);
    }

    .cardContainer {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
    }

    .card {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(1px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 16px;
      width: 200px;
      padding: 15px;
      transition: transform 0.3s ease;
      box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
      text-align: center;
      margin-top:20px;
    }

    .card:hover {
      transform: scale(1.05);
    }

    .card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-radius: 12px;
    }

    .card h2 {
      font-size: 18px;
      margin: 10px 0 5px;
      color: #fff;
    }

    .card p {
      font-size: 14px;
      color: #ccc;
      margin: 0 0 10px;
    }

    .play-btn {
      background-color: #00ffaa;
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      color: black;
      cursor: pointer;
      font-weight: bold;
      transition: background 0.3s;
    }

    .play-btn:hover {
      background-color: #00dd99;
    }

    ul {
      list-style: none;
      padding: 0;
      margin-top: 40px;
    }

    ul li {
      margin: 10px auto;
      text-align: center;
      font-size: 16px;
      background: rgba(255,255,255,0.1);
      padding: 10px;
      border-radius: 10px;
      max-width: 600px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    audio {
      display: block;
      margin: 20px auto;
    }
  .run {
    position:absolute;
    bottom: 0;
    left: 100;
    background-color:#ffffff0c;
    padding: 11px;
    width: 100%;
    z-index: 999;
    display:flex;
    justify-content: center;
    align-items:center;
    margin-bottom:-350px;
    border: solid black 2px;
}
  </style>
</head>
